<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <display-name>Simple Web Application</display-name>
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>org.academiadecodigo.javabank.servlets.Hello</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>customerDetails</servlet-name>
        <servlet-class>org.academiadecodigo.javabank.servlets.CustomerDetails</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>customerDetails</servlet-name>
        <url-pattern>/javabank</url-pattern>
    </servlet-mapping>
</web-app>